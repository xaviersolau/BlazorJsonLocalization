<Router AppAssembly="@typeof(Program).Assembly"
        AdditionalAssemblies="@(new [] {
            typeof(SoloX.BlazorJsonLocalization.Example.Components.StaticAssets.Pages.Counter).Assembly,
            typeof(SoloX.BlazorJsonLocalization.Example.Components.Embedded.Pages.Index).Assembly,
            typeof(An.Other.Name.Embedded.Pages.Component1).Assembly,
            typeof(SoloX.BlazorJsonLocalization.Example.Components.Embedded3.Pages.Component2).Assembly
        })">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
